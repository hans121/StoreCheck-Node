block append scripts
    link(type='text/css', href='/vendor/css/select2.min.css',  rel='stylesheet')
    script(src='/vendor/select2.min.js', type='text/javascript')
    script(src='/js/widgets/factory-select.js')

mixin factory_select(classname, style_attrs)
    input.factory-select-widget(class=classname, style=style_attrs, value=(typeof(sample) != 'undefined' ? sample.factory_code : ""), data-id=(typeof(sample) != 'undefined' ? sample.factory_id : ""))