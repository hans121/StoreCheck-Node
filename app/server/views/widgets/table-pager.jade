mixin table_pager(pager_class, selected_value)
    .pager.text-center(style="width: 100%", class=pager_class)
        button.btn.btn-sm.btn-info.first(style="border-radius: 5px;")
            i.icon-fast-backward(style="padding-left: 0;")
        button.btn.btn-sm.btn-info.prev(style="border-radius: 5px;")
            i.icon-backward(style="padding-left: 0;")
        input(type="text", disabled="disabled", style="text-align: center;").pagedisplay
        button.btn.btn-sm.btn-info.next(style="border-radius: 5px;")
            i.icon-forward(style="padding-left: 0;")
        button.btn.btn-sm.btn-info.last(style="border-radius: 5px;")
            i.icon-fast-forward(style="padding-left: 0;")
        select.pagesize(style="width: auto; margin-right: 5px;")
            - if(typeof(selected_value) == 'undefined' && selected_value == 15)
                option(selected="selected", value="15") 15
            - else
                option(value="15") 15

            - if(typeof(selected_value) == 'undefined' || selected_value == 30)
                option(selected="selected", value="30") 30
            - else
                option(value="30") 30

            - if(typeof(selected_value) != 'undefined' && selected_value == 100)
                option(selected="selected", value="100") 100
            - else
                option(value="100") 100

            - if(typeof(selected_value) != 'undefined' && selected_value == 250)
                option(selected="selected", value="250") 250
            - else
                option(value="250") 250

            - if(typeof(selected_value) != 'undefined' && selected_value == 500)
                option(selected="selected", value="500") 500
            - else
                option(value="500") 500
        | per page