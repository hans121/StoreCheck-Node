block append scripts
    link(type='text/css', href='/vendor/css/select2.min.css',  rel='stylesheet')
    script(src='/vendor/select2.min.js', type='text/javascript')
    script(src='/js/widgets/production-line-select.js')

mixin production_line_select(classname, style_attrs)
    input.production-line-select-widget(class=classname, style=style_attrs, value=(typeof(sample) != 'undefined' ? sample.production_line_code : ""), data-id=(typeof(sample) != 'undefined' ? sample.production_line_id : ""))