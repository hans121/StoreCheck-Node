extends ../layout

block content
    include ./navbar
    include ../widgets/message-bar
    include ../modals/alert
    include ../modals/confirm
    include ../modals/loading

    style.
        .meter {
            height: 20px;
            position: relative;
            background: #555;
            margin-left: 100px;

            padding: 4px;

            webkit-border-top-right-radius: 8px;
            -webkit-border-bottom-right-radius: 8px;
            -moz-border-radius-topright: 8px;
            -moz-border-radius-bottomright: 8px;
            border-top-right-radius: 8px;
            border-bottom-right-radius: 8px;
            -webkit-border-top-left-radius: 20px;
            -webkit-border-bottom-left-radius: 20px;
            -moz-border-radius-topleft: 20px;
            -moz-border-radius-bottomleft: 20px;
            border-top-left-radius: 20px;
            border-bottom-left-radius: 20px;
        }
        .meter > span {
            background-color: #f00;
            height: 100%;
            display: block;


            webkit-border-top-right-radius: 8px;
            -webkit-border-bottom-right-radius: 8px;
            -moz-border-radius-topright: 8px;
            -moz-border-radius-bottomright: 8px;
            border-top-right-radius: 8px;
            border-bottom-right-radius: 8px;
            -webkit-border-top-left-radius: 20px;
            -webkit-border-bottom-left-radius: 20px;
            -moz-border-radius-topleft: 20px;
            -moz-border-radius-bottomleft: 20px;
            border-top-left-radius: 20px;
            border-bottom-left-radius: 20px;

            -webkit-box-shadow: inset 0 2px 9px rgba(255, 255, 255, 0.3), inset 0 -2px 6px rgba(0, 0, 0, 0.4);
            -moz-box-shadow: inset 0 2px 9px rgba(255, 255, 255, 0.3), inset 0 -2px 6px rgba(0, 0, 0, 0.4);
            box-shadow: inset 0 2px 9px rgba(255, 255, 255, 0.3), inset 0 -2px 6px rgba(0, 0, 0, 0.4);
        }
        a.database,
        a.collection {
            color: #555;
            cursor: pointer;
            text-decoration: underline;
        }
        .db-summary {
            font-size: smaller;
        }
        .system-info {
            display: inline-block;
            max-width: 500px;
        }
        .system-info-container label {
            width: 120px;
        }
        .disk-usage > a {
            padding-left: 10px;
            color: #333;
            cursor: pointer;
        }

    mixin navbar()
    .container-fluid
        mixin message_bar_container()
        h3 System Resources
        div(style="background-color: #fff; padding: 20px; margin-bottom: 25px; overflow-y:auto;")
            .cpu-chart-container
        .flex-wrap
            .system-info
                h4 System Info
                .well.pull-left(style="margin-right: 15px;")
                    .system-info-container
            .disk-usage
                h4.pull-left Disk usage
                a.refresh-disk.pull-left
                    i.icon-refresh
                .clearfix
                .disk-usage-container.pull-left.flex-wrap
        .clearfix
        h4(style="margin-top: 25px;") Databases
        .database-container
        .clearfix

block append scripts
    script(src='/vendor/jquery.form.min.js')
    script(src='/js/controllers/pageController.js')
    script(src='/vendor/tablesorter/jquery.tablesorter.min.js', type='text/javascript')
    script(src='/vendor/jquery.flot.min.js')
    script(src='/vendor/jquery.flot.pie.js')
    script(src='/vendor/moment.min.js')
    script(src='/js/util/general-util.js')
    script(src='/js/charts/cpu-chart.js')
    script(src='/js/widgets/databases-widget.js')
    script(src='/js/widgets/system-info-widget.js')
    script(src='/js/charts/disk-usage-chart.js')
    script(src='/js/pages/system-resources.js')